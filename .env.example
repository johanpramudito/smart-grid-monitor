# Copy this file to .env.local (or the appropriate environment-specific file)
# and update each value with your deployment secrets.

# PostgreSQL connection string used by src/lib/database/connection.ts
DATABASE_URL="postgres://username:password@host:5432/smart_grid_monitor"

# Secret used to sign session cookies
AUTH_SECRET="replace-with-a-long-random-string"

# If you expose additional public variables, prefix them with NEXT_PUBLIC_
# NEXT_PUBLIC_API_BASE_URL="http://localhost:3000"

# MQTT Broker configuration for relay control
# Using test.mosquitto.org public broker (no authentication required)
MQTT_BROKER_URL="mqtt://test.mosquitto.org:1883"
MQTT_USERNAME=""
MQTT_PASSWORD=""
MQTT_CLIENT_ID="smart-grid-server"
